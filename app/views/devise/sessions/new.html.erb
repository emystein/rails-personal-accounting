<div class="container form-sm">
  <h2 class="text-center">Log in</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, input_html: { autocomplete: "email" } %>
    <%= f.password_field :password, input_html: { autocomplete: "current-password" } %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.submit 'Log in', class: 'w-100 btn btn-lg btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>